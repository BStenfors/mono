{
  "name": "@terrajs/mono",
  "version": "0.3.4",
  "description": "Framework to create monolithic REST API",
  "main": "lib/",
  "files": [
    "lib",
    "bin"
  ],
  "bin": {
    "mono": "./bin/mono.js"
  },
  "nyc": {
    "include": [
      "src/"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "eslint 'lib/**'",
    "test": "nyc ava --verbose --serial test/ && nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "preversion": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terrajs/mono.git"
  },
  "contributors": [
    {
      "name": "Sebastien Chopin (@Atinux)"
    },
    {
      "name": "Benjamin Canac (@benjamincanac)"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@terrajs/imperium": "^1.1.1",
    "app-root-dir": "^1.0.2",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.1",
    "express": "^4.15.4",
    "express-validation": "^1.0.2",
    "glob-promise": "^3.1.0",
    "helmet": "^3.8.1",
    "joi": "^11.0.1",
    "joi-to-json-schema": "^3.0.0",
    "jsonwebtoken": "^8.0.1",
    "morgan": "^1.8.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "codecov": "^2.3.0",
    "eslint": "^4.7.2",
    "eslint-plugin-node": "^5.1.1",
    "nyc": "^11.2.1",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "rimraf": "^2.6.2",
    "std-mocks": "^1.0.1"
  },
  "keywords": [
    "mono",
    "rest api",
    "framework",
    "monolithic",
    "rest-api",
    "acl",
    "log"
  ]
}
