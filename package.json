{
  "name": "@terrajs/mono",
  "version": "0.2.4",
  "description": "Framework to create monolithic REST API",
  "main": "dist/src/",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "nyc": {
    "include": [
      "dist/src/"
    ]
  },
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "lint": "tslint src/*.ts",
    "test": "npm run lint && npm run build && nyc ava --verbose --serial dist/test/ && nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "preversion": "npm test",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terrajs/mono.git"
  },
  "contributors": [
    {
      "name": "Sebastien Chopin (@Atinux)"
    },
    {
      "name": "Benjamin Canac (@benjamincanac)"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@terrajs/imperium": "^1.0.0",
    "@types/express": "^4.0.36",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/morgan": "^1.7.32",
    "app-root-dir": "^1.0.2",
    "body-parser": "^1.17.2",
    "express": "^4.15.4",
    "express-validation": "^1.0.2",
    "glob-promise": "^3.1.0",
    "helmet": "^3.8.1",
    "joi-to-json-schema": "^3.0.0",
    "jsonwebtoken": "^7.4.2",
    "morgan": "^1.8.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/debug": "^0.0.30",
    "@types/helmet": "^0.0.36",
    "@types/node": "^8.0.20",
    "@types/winston": "^2.3.4",
    "ava": "^0.21.0",
    "codecov": "^2.3.0",
    "nyc": "^11.1.0",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "rimraf": "^2.6.1",
    "std-mocks": "^1.0.1",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  },
  "keywords": [
    "mono",
    "rest api",
    "framework",
    "monolithic",
    "rest-api",
    "acl",
    "log"
  ]
}
